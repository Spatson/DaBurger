<div class="jumbotron jumbotron-fluid">
    <h1 class="display-3">Eat Da Burgers!</h1>
    <img src="/assets/img/burger.png">
    <p class="lead">Please type the name of a burger that you wish to eat.</p>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger:</label>
            <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6" id="not_devoured">
            <h2>Burgers ready to be eaten!</h2>
            {{#each burgers}}
            {{#unless devoured}}
            <div class="not-eaten">
                {{id}}. {{burger_name}}
                <button class="devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                    EAT IT!
                </button></div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6" id="devoured">
            <h2>Devoured Burgers!</h2>
            {{#each burgers}}
            {{#if devoured}}
            <div class="eaten">
                {{id}}. {{burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>